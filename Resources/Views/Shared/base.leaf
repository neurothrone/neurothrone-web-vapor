<!doctype html>
<html lang="en" class="h-100">
<head>
  <meta charset="utf-8">
  <meta name="author" content="Zaid Neurothrone">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="robots" content="noindex">
  <title>#(title)</title>
  <!-- Brand icon -->
  <link rel="icon" type="image/x-icon" href="/img/favicon.png">
  <!-- Bootstrap Core CSS -->
  <link href="/vendor/bootstrap/bootstrap.min.css" rel="stylesheet">
  <!-- FontAwesome Core CSS -->
  <link rel="stylesheet" href="/vendor/fontawesome/css/all.min.css">
  <!-- Custom CSS  -->
  <link href="/css/style.css" rel="stylesheet">
</head>
<body class="d-flex flex-column h-100">

<!-- Navigation -->
<nav class="fixed-top navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container align-items-baseline">

    <!-- Brand -->
    <a class="navbar-brand interactive-element"
       href="/"><span class="#if(activePage == "index"): active #endif">Neurothrone</span>
    </a>

    <!-- Hamburger menu -->
    <button class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#global-navigation"
            aria-controls="global-navigation"
            aria-expanded="false"
            aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Nav Links -->
    <div class="collapse navbar-collapse" id="global-navigation">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link interactive-element"
             href="/about"><span class="#if(activePage == "about"): active #endif">About</span></a>
        </li>

        <li class="nav-item">
          <a class="nav-link interactive-element"
             href="/contact"><span class="#if(activePage == "contact"): active #endif">Contact</span></a>
        </li>

        <li class="nav-item">
          <a class="nav-link interactive-element"
             aria-current="page"
             href="/cv"><span class="#if(activePage == "cv"): active #endif">CV</span></a>
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link interactive-element"
             href="/portfolio"><span class="#if(activePage == "portfolio"): active #endif">Portfolio</span></a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Header -->
<header class="mt-5">
  <h1 class="mt-4 text-center display-4">#(title)</h1>
</header>

<!-- Main Content -->
#import("content")

<!-- Footer -->
<footer class="container mt-auto color-text-secondary">
  <div class="row">
    <div class="col">
      <p class="text-start">Neurothrone &copy; 2022</p>
    </div>

    <div class="col text-end">
      <p><a class=" interactive-element"
            href="#">Back to top</a>
      </p>
    </div>
  </div>

  <ul class="list-inline text-start">
    <li class="list-inline-item">
      <a class="text-decoration-none"
         href="https://github.com/neurothrone">
        <i class="fa-brands fa-github-square fs-3 interactive-element"></i>
      </a>
    </li>
    <li class="list-inline-item">
      <a class="text-decoration-none"
         href="https://www.linkedin.com/in/neurothrone">
        <i class="fa-brands fa-linkedin fs-3 interactive-element"></i>
      </a>
    </li>
  </ul>

  <hr>

  <p class="text-center">This <a class="interactive-element" href="/portfolio/#neurothrone-tech">site</a> is powered by <a
          class="interactive-element"
          href="https://swift.org"
          target="_blank">Swift</a> & <a
          class="interactive-element"
          href="https://vapor.codes"
          target="_blank">Vapor</a>
  </p>
</footer>

<!-- Bootstrap Core JS -->
<script src="/vendor/bootstrap/bootstrap.min.js"></script>

</body>
</html>
